$padding = 5px

.Photo
    display inline-block
    position relative
    height 150px
    width 150px
    margin 25px
    overflow hidden
    transition opacity .3s ease-out
    background-size cover
    opacity 0

    &.loaded
        opacity 1

    &__img
        position absolute
        opacity 0
        height 100%
        width 100%

    &__info
        position absolute
        height 100%
        width 100%
        box-sizing border-box
        opacity 0
        transform translateZ(0)
        backface-visibility hidden
        transition opacity .2s ease-out
        pointer-events none

    &__likes
        position absolute
        top 10px

        display flex
        justify-content center
        align-items center
        height 50px
        width 100%

        font-weight bold

    &__likes-icon
        position absolute
        margin-top 3px
        transform scale(2.5)

        & + &
            transform scale(2.65) translateY(.2px)
            opacity .5
            z-index -1

    &__likes-count
        position absolute
        width 100%
        text-align center

    &__desc
        position absolute
        bottom 0
        height 100%
        width 100%
        padding $padding
        padding-top 4.8em
        box-sizing border-box

        transition transform .1s ease-out
        transform translateY(20px)
        background linear-gradient(to top,
            rgba(255,255,255,1) 5%,
            rgba(255,255,255,.8) 50%,
            rgba(255,255,255,0))

    &:hover &
        &__info
            opacity 1

        &__desc
            transform translateY(0)
